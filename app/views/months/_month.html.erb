<div id="<%= dom_id month %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Month:</strong>
    <%= month.month %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Monthly planned:</strong>
    <%= month.monthly_planned %>
  </p>

  <% if action_name != "show" %>
    <%= render partial: "components/gray_button", locals: { message: 'Show this month', path: month} %>
    <%= render partial: "components/gray_button", locals: { message: 'Edit this month', path: edit_month_path(month) } %>
    <hr class="mt-6">
  <% end %>
</div>
