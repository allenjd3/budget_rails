<div id="<%= dom_id month %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Month:</strong>
    <%= month.month %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Monthly planned:</strong>
    <%= month.monthly_planned %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this month", month, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this month', edit_month_path(month), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
